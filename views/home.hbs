{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    User has been removed.
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-4">
        <h2 class="display-4 mb-4">User Table</h2>
        <a href="/adduser" class="btn btn-primary btn-lg rounded-pill px-4">+
          Add User</a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each rows}}
                <tr class="border-bottom">
                  <td>{{this.id}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.first_name}}</td>
                  <td>{{this.last_name}}</td>
                  <td>{{this.phone}}</td>
                  <td>
                    <a
                      href="/viewuser/{{this.id}}"
                      class="btn btn-outline-primary btn-sm rounded-pill px-3 me-2"
                    >View</a>
                    <a
                      href="/edituser/{{this.id}}"
                      class="btn btn-outline-primary btn-sm rounded-pill px-3 me-2"
                    >Edit</a>
                    <a
                      href="/{{this.id}}"
                      class="btn btn-outline-danger btn-sm rounded-pill px-3"
                    >Delete</a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>